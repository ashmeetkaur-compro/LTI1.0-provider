{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["master"],
  "extends": [
    "config:recommended"
  ],
  "labels": ["deploy-to-dev"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "major"],
      "autoApprove": true,
      "automerge": true,
    }
  ],
"timezone": "Asia/Kolkata",
"schedule": ["* 0-3 * * *"],
"automergeSchedule": ["* 0-3 * * 7"],
"assignees": ["ashmeetkaur-compro"]
}
